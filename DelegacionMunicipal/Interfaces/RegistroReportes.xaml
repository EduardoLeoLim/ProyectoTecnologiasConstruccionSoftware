                <Label Content="Datos del vehiculo" HorizontalAlignment="Left" Margin="695,224,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                <Label Content="No. de placas: " HorizontalAlignment="Left" Margin="730,260,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Marca: " HorizontalAlignment="Left" Margin="1018,260,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Modelo: " HorizontalAlignment="Left" Margin="730,294,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Año: " HorizontalAlignment="Left" Margin="1018,294,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Color: " HorizontalAlignment="Left" Margin="730,328,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Dirección" HorizontalAlignment="Left" Margin="695,357,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                <Label Content="Municipio: " HorizontalAlignment="Left" Margin="730,394,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Localidad: " HorizontalAlignment="Left" Margin="964,394,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Asentamiento: " HorizontalAlignment="Left" Margin="732,428,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Calle: " HorizontalAlignment="Left" Margin="733,462,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Vehiculos involucrados" HorizontalAlignment="Left" Margin="695,496,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.58,2.468"/>
                <Label Content="Imagenes" HorizontalAlignment="Left" Margin="695,619,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.58,2.468"/>
                <Label Content="Dictamen" HorizontalAlignment="Left" Margin="695,738,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.58,2.468"/>
