                <Label Content="Hora: " HorizontalAlignment="Left" Margin="917,802,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Descripción: " HorizontalAlignment="Left" Margin="734,843,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Border BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" Height="200" Width="500" Margin="746,877,50,0" >
                    <TextBlock TextWrapping="Wrap" Text="Descripción del dictamen" VerticalAlignment="Top" Height="199" HorizontalAlignment="Left" />

                </Border>
                
            </Grid>
        </ScrollViewer>
